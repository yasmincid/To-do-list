<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.example.todolist.MainActivity" android:id="@+id/flottingAdd">
    <TextView
            android:text="@string/tview1"
            android:layout_width="171dp"
            android:layout_height="31dp"
            android:textColor="#0A0A0A"
            android:id="@+id/tvIntroduceDates" android:layout_marginStart="122dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:layout_marginBottom="27dp" app:layout_constraintBottom_toTopOf="@+id/lvTask"
            android:textStyle="bold" android:layout_above="@+id/lvTask"
            android:layout_alignParentStart="true" android:layout_marginTop="23dp"
            android:layout_alignParentTop="true" app:layout_constraintVertical_bias="1.0"/>
    <ListView
            android:layout_width="322dp"
            android:layout_height="514dp"
            android:id="@+id/lvTask" android:layout_marginBottom="66dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="29dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.555"
            android:layout_alignParentEnd="true" android:layout_above="@+id/newTask"
            android:layout_alignParentStart="true" android:layout_marginTop="87dp"
            android:layout_alignParentTop="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/floatingActionButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            android:onClick="add" app:backgroundTint="#009688"/>

</androidx.constraintlayout.widget.ConstraintLayout>