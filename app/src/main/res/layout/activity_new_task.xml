<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".NewTask" android:onClick="findTask" android:id="@+id/addTask">


    <EditText
            android:layout_width="352dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titleNewTask" android:hint="@string/tasktitle" android:textColor="#090808"
            android:textColorHint="#0C0B0B" android:textSize="18sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/descripNewTask" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv1" app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="351dp"
            android:layout_height="72dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/descripNewTask" android:hint="@string/descNewTask" android:textColorHint="#070707"
            android:textSize="18sp" android:textColor="#090808"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/dateNewTask"
            android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="353dp"
            android:layout_height="66dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dateNewTask" android:hint="@string/dateTask" android:textColorLink="#ffffff"
            android:textColorHint="#070707" android:textSize="18sp" android:textColor="#090808"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toBottomOf="@+id/tv1"/>
    <TextView
            android:text="@string/newTask"
            android:layout_width="345dp"
            android:layout_height="60dp" android:id="@+id/tv1" android:textColor="#090808" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="652dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.44"/>

    <Button
            android:text="@string/addBT"
            android:layout_width="210dp"
            android:layout_height="59dp" android:id="@+id/addBT"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/BtFindTask" app:layout_constraintHorizontal_bias="0.216"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/dateNewTask"
            app:layout_constraintVertical_bias="0.0" android:onClick="addDatos"/>
    <Button
            android:text="@string/findTask"
            android:layout_width="218dp"
            android:layout_height="wrap_content" android:id="@+id/BtFindTask" android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/addBT"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.225" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/dateNewTask" android:onClick="findTask"/>
    <Button
            android:text="@string/addBack"
            android:layout_width="211dp"
            android:layout_height="49dp" android:id="@+id/button3" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.255" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateNewTask" app:layout_constraintVertical_bias="0.58"/>

</androidx.constraintlayout.widget.ConstraintLayout>