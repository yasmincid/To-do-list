<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context="com.example.todolist.NewTask" android:id="@+id/addTask">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="335dp"
            android:layout_height="426dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout">
        <TextView
                android:text="@string/newTask"
                android:layout_width="314dp"
                android:layout_height="54dp" android:id="@+id/tvIntroduceDates" android:textColor="#090808"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                android:layout_marginStart="8dp" android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/titleNewTask" android:hint="@string/tasktitle" android:textColor="#090808"
                android:textColorHint="#0C0B0B" android:textSize="18sp"
                android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/descripNewTask" android:hint="@string/descNewTask" android:textColorHint="#070707"
                android:textSize="18sp" android:textColor="#090808"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>